<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 minute">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{20}.%M\(%line\) - %msg%n</Pattern>
		</layout>
	</appender>

    <root level="INFO">
    	<appender-ref ref="STDOUT" />
    </root>
</configuration>